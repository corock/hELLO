#tt-body-page
  #__main
    width var(--h-article-width)

#tt-body-index,
#tt-body-category,
#tt-body-archive,
#tt-body-tag,
#tt-body-search
  #__main
    width var(--h-index-width)

#__main
  display flex
  flex 0.7
  padding-left 4rem

  clear both
  padding-bottom 70px
  max-width 1100px

  @media screen and (max-width: 1200px)
    padding 0 15px
    padding-bottom 55px
    width 100% !important
    box-sizing border-box
